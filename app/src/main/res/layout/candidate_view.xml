<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--
    Created By: Shreya Jain
    Created On: November 13, 2020
    -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="406dp"
        android:layout_height="52dp"
        android:layout_marginTop="75dp"
        android:text="Examinee: Test"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="403dp"
        android:layout_height="244dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="175dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="397dp"
        android:layout_height="37dp"
        android:text="Submitted At: 01/01/2020 19:07"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="401dp"
        android:layout_height="69dp"
        android:text="Activity Summary: Odin was sent to background for # times. Total time Odin was in background was xx minutes."
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="419dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="405dp"
        android:layout_height="137dp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="520dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="403dp"
        android:layout_height="30dp"
        android:text="Activity Log"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="490dp" />

</androidx.constraintlayout.widget.ConstraintLayout>