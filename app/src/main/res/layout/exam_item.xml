<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp"
    android:layout_margin="8dp">
    <!-- Created by: Gerardo Gandeaga
        Updated by: Shreya Jain
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tvExamTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exam_title"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvExamId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id"
            android:textStyle="normal"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvExamStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exam_time"
            android:textStyle="normal"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvExamEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exam_time"
            android:textStyle="normal"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvAuthTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exam_auth_time"
            android:textStyle="normal"
            android:textSize="13sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>